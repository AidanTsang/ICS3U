#Exercise 1 - Mailing Address
name = "St.Robert Catholic High School"
address = "8101 Leslie St."
city = "Thornhill"
province = "ON"
postal_code = "L3T 7P4"
telephone = "905-889-4982"
print(f"{name}\n{address}\n{city}, {province}\n{postal_code}\n{telephone}")

#Exercise 2 - Hello
num = 0
name = input("What's your name\n")
print(f"Hello, {name}.")
  
#Exercise 3 - Area of a room
while True:
    try:
        w = float(input("Please enter the width of the room in metre: "))
    except ValueError:
        print("-----Please enter number-----")
    else:
        while True:
            try:
                l = float(input("Please enter the length of the room in metre: "))
            except ValueError:
                print("-----Please enter number-----")
            else:
                print(f"The area of the room is {w*l} square metres")
                break
        break

#Exercise 4 - Area of a field
while True:
    try:
        w = float(input("Please enter the width of the field in inch: "))
    except ValueError:
        print("-----Please enter number-----")
    else:
        while True:
            try:
                l = float(input("Please enter the length of the field in inch: "))
            except ValueError:
                print("-----Please enter number-----")
            else:
                print(f"The area of the field is {w*l/43560} acres")
                break
        break

#Exercise 5 - BottleDeposits
